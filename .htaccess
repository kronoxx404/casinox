# Bloquear el acceso a archivos sensibles como config.php
<Files "config.php">
    Order Allow,Deny
    Deny from all
</Files>
<Files "conexion.php">
    Order Allow,Deny
    Deny from all
</Files>
# Activar mod_rewrite si est√° disponible
RewriteEngine On

# Reescribir URL sin .php
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^([^\.]+)$ $1.php [L]
